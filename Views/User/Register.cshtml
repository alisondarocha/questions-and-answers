@model UserModel

@{
    ViewData["Title"] = "Registre-se";
}

<body>
    <div class="container">
        <h1 class="text-primary">Crie sua conta</h1>
        <form method="post" class="w-25">
            <div class="form-group">
                <label asp-for="Name">Nome</label><br>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="BirthDate">Data de Nascimento</label><br>
                <input asp-for="BirthDate" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Email">E-mail</label><br>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="mt-3">
                <a href="/Home/Index" class="btn btn-light">Cancelar</a>
                <button class="btn btn-success" type="submit">Salvar</button>
            </div>
        </form>
    </div>
</body>
